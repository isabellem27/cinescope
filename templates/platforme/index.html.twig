{% extends 'base.html.twig' %}

{% block title %}Platforme index{% endblock %}

{% block body %}
    <h1>Platforme index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Url</th>
                <th>Logo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for platforme in platformes %}
            <tr>
                <td>{{ platforme.id }}</td>
                <td>{{ platforme.name }}</td>
                <td>{{ platforme.url }}</td>
                <td>{{ platforme.logo }}</td>
                <td>
                    <a href="{{ path('app_platforme_show', {'id': platforme.id}) }}">show</a>
                    <a href="{{ path('app_platforme_edit', {'id': platforme.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_platforme_new') }}">Create new</a>
{% endblock %}
